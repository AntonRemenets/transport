generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Наименование автобусных маршрутов
model BusRoutes {
  id       Int     @id @default(autoincrement())
  title    String  @unique
  from     String
  to       String
  distance Float
  buses    Buses[]

  // Waybills Waybills?
}

// Список автобусов
model Buses {
  id             Int    @id @default(autoincrement())
  vehicle_number String @unique
  vin            String @unique
  category       String
  brand          String
  model          String
  busRoutesId    Int

  routes  BusRoutes @relation(fields: [busRoutesId], references: [id])
  drivers Drivers[]

  // Waybills Waybills?
}

// Список водителей
model Drivers {
  id         Int     @id @default(autoincrement())
  surname    String
  name       String
  patronymic String? @default("")
  license    String
  busesId    Int

  buses Buses @relation(fields: [busesId], references: [id])

  // Waybills Waybills?
}

